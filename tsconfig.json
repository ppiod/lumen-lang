{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@interpreter/*": ["interpreter/*"],
      "@runtime/*": ["runtime/*"],
      "@stdlib/*": ["stdlib/*"],
      "@syntax/*": ["syntax/*"],
      "@cli/*": ["cli/*"],
      "@repl/*": ["repl/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
